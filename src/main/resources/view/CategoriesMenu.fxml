<?import javafx.scene.layout.Pane?>

<Pane fx:id="mainPane" prefHeight="630.0" prefWidth="828.0" style="-fx-background-color: #E0F2F1;" stylesheets="@../CSS%20files/CategoriesMenu.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.CategoryProcessor">
   <children>
      <TreeTableView fx:id="categoriesTableView" layoutX="84.0" layoutY="82.0" onMouseClicked="#initButtons" prefHeight="430.0" prefWidth="660.0">
         <columns>
            <TreeTableColumn prefWidth="156.0" text="Name">
               <cellValueFactory>
                  <TreeItemPropertyValueFactory property="Name" />
               </cellValueFactory>
            </TreeTableColumn>
            <TreeTableColumn prefWidth="492.0" text="Features">
               <cellValueFactory>
                  <TreeItemPropertyValueFactory property="Features" />
               </cellValueFactory>
            </TreeTableColumn>
         </columns>
      </TreeTableView>
      <JFXButton fx:id="addCategoryButton" layoutX="84.0" layoutY="537.0" onMouseClicked="#addSubCategoryMouseClicked" style="-fx-background-color: #80CBC4;" styleClass="Button" text="Add SubCategory" textFill="WHITE" />
      <JFXButton fx:id="deleteCategoryButton" layoutX="351.0" layoutY="537.0" onMouseClicked="#deleteCategoryMouseClicked" style="-fx-background-color: #80CBC4;" styleClass="Button" text="Delete" textFill="WHITE" />
      <JFXButton fx:id="editCategoryButton" layoutX="264.0" layoutY="537.0" onMouseClicked="#editCategoryMouseClicked" style="-fx-background-color: #80CBC4;" styleClass="Button" text="Edit" textFill="WHITE" />
   </children>
</Pane>
